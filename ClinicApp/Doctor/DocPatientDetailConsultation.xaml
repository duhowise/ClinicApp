<UserControl x:Class="ClinicApp.Doctor.DocPatientDetailConsultation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClinicApp.Doctor"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1500">
    <Grid>
      <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"></ColumnDefinition>
      </Grid.ColumnDefinitions> 
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer CanContentScroll="True" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Padding="10">
            <StackPanel Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <materialDesign:Card Grid.Column="0" Grid.Row="0" Margin="4 4 0 0"  Background="{DynamicResource MaterialDesignBackground}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Label x:Name="PatientName" FontWeight="Bold" Grid.Row="0" Content="Patient name" HorizontalAlignment="Left"
                           Width="324" FontSize="26" Foreground="{DynamicResource AccentColorBrush}" Margin="205,2,0,0"/>
                            <DatePicker x:Name="DatePicker" TabIndex="9"
                                    Grid.Column="0"  Grid.Row="0"
                                    Margin="0,10,10,0" IsEnabled="True"
                                    Width="250"
                                    Height="35"
                                    HorizontalAlignment="Right"
                                    controls:TextBoxHelper.IsWaitingForData="True"
                                    controls:TextBoxHelper.ButtonContent=""
                                    controls:TextBoxHelper.ButtonFontFamily="wingdings"
                                    BorderBrush="{DynamicResource PrimaryColorBrush}"
                                    BorderThickness="1"
                                    Foreground="{DynamicResource PrimaryColorBrush}" FontSize="16" />

                            <Image Grid.Row="1" x:Name="PatientImage" Width="120" Height="120"
                          Source="../media/User.png" Grid.Column="0" HorizontalAlignment="Left" />
                            <StackPanel Grid.Column="0" Margin="130,0,0,10" Grid.Row="1">
                                <Label Content="Basic information" HorizontalAlignment="Left"
                           FontSize="14" Foreground="{DynamicResource AccentColorBrush}"/>
                                <Separator Height="2" Style="{StaticResource MaterialDesignDarkSeparator}"/>
                                <Label Content="Designation : student" HorizontalAlignment="Left" x:Name="PatientDesignation"
                            FontSize="14" Foreground="{DynamicResource AccentColorBrush}"/>
                                <Label Content="Temperature : 30 degrees Celsius" HorizontalAlignment="Left" x:Name="PatientTemperature"
                            FontSize="14" Foreground="{DynamicResource AccentColorBrush}"/>
                                <Label Content="Blood pressure : 120/80 mm Hg" HorizontalAlignment="Left" x:Name="PatientBloodPressure"
                            FontSize="14" Foreground="{DynamicResource AccentColorBrush}"/>
                                <Label Content="Pulse : 120 bpm" HorizontalAlignment="Left" x:Name="PatientPulse"
                            FontSize="14" Foreground="{DynamicResource AccentColorBrush}"/>
                                <Label Content="Weight : 69 kg" HorizontalAlignment="Left" x:Name="PatientWeight"
                            FontSize="14" Foreground="{DynamicResource AccentColorBrush}"/>
                                <Label Content="Date : 12/12/02" HorizontalAlignment="Left" x:Name="PatientLastVisited"
                            FontSize="14" Foreground="{DynamicResource AccentColorBrush}"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                    <WrapPanel Grid.Column="0" ItemWidth="550" Grid.Row="1">
                        <materialDesign:Card Margin="4 4 0 0" Background="{DynamicResource MaterialDesignBackground}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Content="Diagnosis" Grid.Row="0" Grid.Column="0" Height="30"
                                           HorizontalContentAlignment="Center"
                           Width="150" FontSize="16" Foreground="{DynamicResource AccentColorBrush}"/>
                                    <TextBox Grid.Column="1" Grid.Row="0" Name="tbDiagnosis" TabIndex="7" 
                                 IsEnabled="False" TextWrapping="Wrap" HorizontalScrollBarVisibility="Visible" VerticalAlignment="Center"
                                 VerticalScrollBarVisibility="Visible" TextAlignment="Left" MaxLength="700"
                                 ToolTip="Patient Diagnosis"  Margin="0,10,0,0" Width="350" Height="120" HorizontalAlignment="Center"
                                 Text="textblock showing Diagnosis it is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing"  
                         controls:TextBoxHelper.Watermark="type diagnosis seperated with commas(,)"
                         controls:TextBoxHelper.IsWaitingForData="True"
                         controls:TextBoxHelper.ButtonFontFamily="wingdings"
                         BorderBrush="{DynamicResource AccentColorBrush}"
                         BorderThickness="1"
                         controls:TextBoxHelper.UseFloatingWatermark="False" 
                                 Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontSize="16"/>
                                    <StackPanel Grid.Column="2" Grid.Row="0">
                                        <materialDesign:PopupBox Margin="5" StaysOpen="True">
                                            <Grid>
                                                <Grid.Resources>
                                                    <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
                                                        <Setter Property="Margin" Value="10"/>
                                                        <Setter Property="Content" Value="private"/>
                                                    </Style>
                                                </Grid.Resources>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <CheckBox Grid.Row="0" VerticalAlignment="Center" 
                                                          HorizontalAlignment="Center"
                                                          ToolTip="Click to set diagnosis private"/>
                                                <Button Grid.Column="0" Grid.Row="1" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                                                    Margin="10" HorizontalAlignment="Center" Name="btnEditDiagnosis"
                                                    ToolTip="Click to edit diagnosis" Click="btnEditDiagnosis_Click">
                                                    <materialDesign:PackIcon Kind="Pencil" Height="24" Width="24" />
                                                </Button>
                                                <Button Grid.Column="0" Grid.Row="2" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                                                    Margin="10" HorizontalAlignment="Center" Name="btnClearDiagnosis"
                                                    ToolTip="Click to clear diagnosis" Click="btnClearDiagnosis_Click">
                                                    <materialDesign:PackIcon Kind="DeleteSweep" Height="24" Width="24" />
                                                </Button>
                                            </Grid>
                                        </materialDesign:PopupBox>
                                    </StackPanel>
                                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="0,20,0,5" 
                                Height="30" Width="130" Grid.Column="1" Grid.Row="1" TabIndex="12"
                                Name="btnDiagnosisSave" HorizontalAlignment="Right"
                                 FontFamily="{DynamicResource ToggleSwitchHeaderFontFamily}" Background="{DynamicResource PrimaryColorBrush}"
                                Foreground="{StaticResource WhiteColorBrush}" controls:ButtonHelper.PreserveTextCase="True"
                                FontSize="14" Click="btnDiagnosisSave_Click">
                                        Save
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                        <materialDesign:Card Margin="4 4 0 0" Background="{DynamicResource MaterialDesignBackground}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Content="Prescription" Grid.Row="0" Grid.Column="0" Height="30"
                                           HorizontalContentAlignment="Center"
                           Width="150" FontSize="16" Foreground="{DynamicResource AccentColorBrush}"/>
                                    <TextBox Grid.Column="1" Grid.Row="0" Name="tbPrescriptions" TabIndex="7" 
                                 IsEnabled="True" TextWrapping="Wrap" HorizontalScrollBarVisibility="Visible" VerticalAlignment="Center"
                                 VerticalScrollBarVisibility="Visible" TextAlignment="Left" MaxLength="700"
                                 ToolTip="Patient Prescription"  Margin="0,10,0,0" Width="350" Height="120" HorizontalAlignment="Center"
                                 Text="textblock showing Diagnosis it is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing"  
                         controls:TextBoxHelper.Watermark="type diagnosis seperated with commas(,)"
                         controls:TextBoxHelper.IsWaitingForData="True"
                         controls:TextBoxHelper.ButtonFontFamily="wingdings"
                         BorderBrush="{DynamicResource AccentColorBrush}"
                         BorderThickness="1"
                         controls:TextBoxHelper.UseFloatingWatermark="False" 
                                 Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontSize="16"/>
                                    <StackPanel Grid.Column="2" Grid.Row="0">
                                        <materialDesign:PopupBox Margin="5" StaysOpen="True">
                                            <Grid>
                                                <Grid.Resources>
                                                    <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
                                                        <Setter Property="Margin" Value="10"/>
                                                        <Setter Property="Content" Value="private"/>
                                                    </Style>
                                                </Grid.Resources>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <CheckBox Grid.Row="0" VerticalAlignment="Center" 
                                                          HorizontalAlignment="Center"
                                                          ToolTip="Click to set diagnosis private"/>
                                                <Button Grid.Column="0" Grid.Row="1" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                                                    Margin="10" HorizontalAlignment="Center" Name="btnEditPrescription" IsEnabled="False"
                                                    ToolTip="Click to edit diagnosis" Click="btnEditPrescription_Click">
                                                    <materialDesign:PackIcon Kind="Pencil" Height="24" Width="24" />
                                                </Button>
                                                <Button Grid.Column="0" Grid.Row="2" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                                                    Margin="10" HorizontalAlignment="Center" Name="btnClearPrescription"
                                                    ToolTip="Click to clear diagnosis" Click="btnClearPrescription_Click">
                                                    <materialDesign:PackIcon Kind="DeleteSweep" Height="24" Width="24" />
                                                </Button>
                                            </Grid>
                                        </materialDesign:PopupBox>
                                    </StackPanel>
                                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="0,20,0,5" 
                                Height="30" Width="130" Grid.Column="1" Grid.Row="1" TabIndex="12"
                                Name="btnPrescriptionsSave" HorizontalAlignment="Right"
                                 FontFamily="{DynamicResource ToggleSwitchHeaderFontFamily}" Background="{DynamicResource PrimaryColorBrush}"
                                Foreground="{StaticResource WhiteColorBrush}" controls:ButtonHelper.PreserveTextCase="True"
                                FontSize="14" Click="btnPrescriptionsSave_Click">
                                        Save
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                        <materialDesign:Card Margin="4 4 0 0" Background="{DynamicResource MaterialDesignBackground}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Content="Findings" Grid.Row="0" Grid.Column="0" Height="30"
                                           HorizontalContentAlignment="Center"
                           Width="150" FontSize="16" Foreground="{DynamicResource AccentColorBrush}"/>
                                    <TextBox Grid.Column="1" Grid.Row="0" Name="tbFindings" TabIndex="7" 
                                 IsEnabled="False" TextWrapping="Wrap" HorizontalScrollBarVisibility="Visible" VerticalAlignment="Center"
                                 VerticalScrollBarVisibility="Visible" TextAlignment="Left" MaxLength="700"
                                 ToolTip="Patient Diagnosis"  Margin="0,10,0,0" Width="350" Height="120" HorizontalAlignment="Center"
                                 Text="textblock showing Diagnosis it is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing"  
                         controls:TextBoxHelper.Watermark="type diagnosis seperated with commas(,)"
                         controls:TextBoxHelper.IsWaitingForData="True"
                         controls:TextBoxHelper.ButtonFontFamily="wingdings"
                         BorderBrush="{DynamicResource AccentColorBrush}"
                         BorderThickness="1"
                         controls:TextBoxHelper.UseFloatingWatermark="False" 
                                 Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontSize="16" />
                                    <StackPanel Grid.Column="2" Grid.Row="0">
                                        <materialDesign:PopupBox Margin="5" StaysOpen="True">
                                            <Grid>
                                                <Grid.Resources>
                                                    <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
                                                        <Setter Property="Margin" Value="10"/>
                                                        <Setter Property="Content" Value="private"/>
                                                    </Style>
                                                </Grid.Resources>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <CheckBox Grid.Row="0" VerticalAlignment="Center" 
                                                          HorizontalAlignment="Center"
                                                          ToolTip="Click to set diagnosis private"/>
                                                <Button Grid.Column="0" Grid.Row="1" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                                                    Margin="10" HorizontalAlignment="Center" Name="btnEditFinding"
                                                    ToolTip="Click to edit diagnosis" Click="btnEditFinding_Click">
                                                    <materialDesign:PackIcon Kind="Pencil" Height="24" Width="24" />
                                                </Button>
                                                <Button Grid.Column="0" Grid.Row="2" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                                                    Margin="10" HorizontalAlignment="Center" Name="btnClearFinding"
                                                    ToolTip="Click to clear diagnosis" Click="btnClearFinding_Click">
                                                    <materialDesign:PackIcon Kind="DeleteSweep" Height="24" Width="24" />
                                                </Button>
                                            </Grid>
                                        </materialDesign:PopupBox>
                                    </StackPanel>
                                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="0,20,0,5" 
                                Height="30" Width="130" Grid.Column="1" Grid.Row="1" TabIndex="12"
                                Name="btnFindingsSave" HorizontalAlignment="Right"
                                 FontFamily="{DynamicResource ToggleSwitchHeaderFontFamily}" Background="{DynamicResource PrimaryColorBrush}"
                                Foreground="{StaticResource WhiteColorBrush}" controls:ButtonHelper.PreserveTextCase="True"
                                FontSize="14" Click="btnFindingsSave_Click">
                                        Save
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                    </WrapPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
